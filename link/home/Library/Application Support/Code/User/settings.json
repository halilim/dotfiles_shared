{
  "bashIde.shfmt.caseIndent": true,
  "bashIde.shfmt.simplifyCode": true,
  "bashIde.shfmt.spaceRedirects": true,

  "codeium.enableCodeLens": false,
  "codeium.enableConfig": {
    "*": true,
    "applescript": true,
    "csv (semicolon)": true,
    "csv": true,
    "env": true,
    "git-commit": true,
    "gotmpl": true,
    "icalendar": true,
    "ignore": true,
    "markdown": true,
    "mdx": true,
    "nginx": true,
    "NGINX": true,
    "plaintext": true,
    "plist": true,
    "postcss": true,
    "procfile": true,
    "snippets": true,
    "svg": true,
    "tailwindcss": true,
    "vim-snippet": true,
    "viml": true,
    "Vimscript": true,
    "xml": true,
    "zonefile": true // cSpell:ignore zonefile
  },

  "cSpell.checkVSCodeSystemFiles": true,
  "cSpell.customDictionaries": {
    "shared_en": { "path": "~/.vim/spell/shared.en.utf-8.add" },
    "custom_en": { "path": "~/.vim/spell/custom.en.utf-8.add" },
    "shared_tr": { "path": "~/.vim/spell/shared.tr.utf-8.add" },
    "custom_tr": { "path": "~/.vim/spell/custom.tr.utf-8.add" },
    "custom": true
  },
  "cSpell.dictionaryDefinitions": [
    { "name": "vim", "path": "~/.config/vs-code/dictionaries/vim.txt" }
  ],
  "cSpell.ignoreRegExpList": ["/[^\\s]{40,}/"],
  "cSpell.language": "en,tr",
  "cSpell.languageSettings": [
    { "languageId": "viml", "dictionaries": ["vim"] }
  ],
  "cSpell.usePnP": true,

  "css.format.spaceAroundSelectorSeparator": true,
  "css.lint.compatibleVendorPrefixes": "warning",
  "css.lint.duplicateProperties": "warning",
  "css.lint.float": "warning",
  "css.lint.ieHack": "warning",
  "css.lint.importStatement": "warning",
  "css.lint.universalSelector": "warning",
  "css.lint.unknownVendorSpecificProperties": "warning",
  "css.lint.zeroUnits": "warning",

  "csv-edit.readOption_hasHeader": "true",

  "csv-preview.capitalizeHeaders": false,
  "csv-preview.lineNumbers": "source",
  "csv-preview.resizeColumns": "first",
  "csv-preview.separator": "[,;]",

  "diffEditor.codeLens": true,
  "diffEditor.diffAlgorithm": "advanced",
  "diffEditor.hideUnchangedRegions.enabled": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": false,

  "docker.containers.description": ["RepositoryNameAndTag", "Status"],
  "docker.containers.label": "ContainerName",
  "docker.containers.sortBy": "Label",

  // cSpell:ignore Autocloaking
  "dotenv.enableAutocloaking": false,

  "editor.acceptSuggestionOnEnter": "smart",
  "editor.autoClosingQuotes": "always",
  "editor.cursorBlinking": "phase",
  "editor.find.seedSearchStringFromSelection": "selection",
  "editor.fontFamily": "'SauceCodePro Nerd Font', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 13,
  "editor.guides.bracketPairs": "active",
  "editor.inlineSuggest.enabled": true,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.showSlider": "always",

  "editor.quickSuggestions": {
    "comments": "off",
    "other": "inline",
    "strings": "off"
  },

  "editor.renderWhitespace": "none",
  "editor.rulers": [100],
  "editor.scrollBeyondLastLine": false,
  "editor.snippetSuggestions": "top",
  "editor.suggest.showStatusBar": true,
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,

  "editor.unicodeHighlight.allowedCharacters": {
    "ç": true,
    "ğ": true,
    "ı": true,
    "ö": true,
    "Ö": true,
    "Ş": true,
    "ş": true,
    "ü": true
  },
  "editor.unicodeHighlight.includeComments": true,

  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrapColumn": 100,

  "emmet.includeLanguages": {
    "erb": "html"
  },

  "evenBetterToml.formatter.alignComments": true,
  "evenBetterToml.formatter.alignEntries": true,
  "evenBetterToml.formatter.indentEntries": true,
  "evenBetterToml.formatter.indentString": "  ",
  "evenBetterToml.formatter.indentTables": true,
  "evenBetterToml.formatter.inlineTableExpand": false,
  "evenBetterToml.formatter.reorderArrays": false,
  "evenBetterToml.formatter.reorderKeys": false,
  "evenBetterToml.formatter.trailingNewline": true,

  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.ts": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "Gemfile": "Gemfile.lock",
    "package.json": "package-lock.json, yarn.lock",
    "tsconfig.json": "tsconfig.*.json"
  },

  "extensions.ignoreRecommendations": true,

  // cSpell:ignore apacheconf
  "files.associations": {
    ".markdownlintrc": "jsonc",
    "{.config/git/ignore*,.jshintignore,**/*.ignore,**/.git/**/info/exclude}": "ignore",
    "{.env.*,.env*,**/*.env}": "dotenv",
    "{.gvimrc,.ideavimrc}": "viml",
    "{.inputrc,.shellspec,*.ctags,**/.husky/*,/etc/defaults/**/*.conf,/etc/periodic/**/*.conf}": "shellscript",
    "{.ruby-version,.tool-versions,**/.config/bat/config,default-gems}": "properties",
    "{*.gitconfig*,**/.aws/credentials,**/*ghostty/config,**/php*/**/*.conf,pybritive.config}": "ini",
    "{*.jbuilder,aprc,Brewfile*}": "ruby",
    "{*.sublime-settings,*.tgn,**/chrome/exts/uBlock.txt}": "json",
    "{*.yml.*,**/.bundle/config}": "yaml",
    "{**/nginx*.conf*,**/nginx/**/*.conf*}": "NGINX",
    "*.erb.deface": "erb",
    "*.haml.deface": "haml",
    "*.mdx": "markdown",
    "*.tpl.php": "smarty",
    "*.zone.txt": "zonefile",
    "**/.ssh/config": "ssh_config",
    "/etc/**/*.conf": "plain",
    "/etc/apache2/**/*.conf": "apacheconf",
    "coc-settings.json": "jsonc",
    "Procfile.*": "procfile",
    ".env*": "dotenv"
  },

  "files.exclude": {
    "*.sublime-*": true
  },

  "files.watcherExclude": {
    "*.sublime-*": true
  },

  "git.blame.editorDecoration.enabled": false,
  "git.branchProtection": ["main", "master"],
  "git.openRepositoryInParentFolders": "never",

  "github.copilot.advanced": {},
  "github.copilot.enable": {
    "*": true,
    "markdown": true,
    "plaintext": true,
    "yaml": true
  },

  "html-css-class-completion.enableEmmetSupport": true,

  "html.format.extraLiners": "body",

  "jest.runMode": "on-demand",

  "jqPlayground.binaryPath": "/opt/homebrew/bin/jq",

  "js/ts.implicitProjectConfig.checkJs": true,

  "json.maxItemsComputed": 10000,

  "launch": {
    "configurations": [
      {
        "type": "rdbg",
        "name": "rdbg: Debug current file",
        "request": "launch",
        "script": "${file}",
        "args": [],
        "askParameters": true
      },
      {
        "type": "rdbg",
        "name": "rdbg: Attach",
        "request": "attach"
      },
      {
        "type": "rdbg",
        "name": "rdbg: Debug bin/rails server",
        "request": "launch",
        "script": "bin/rails server"
      },

      {
        "type": "ruby_lsp",
        "request": "launch",
        "name": "Ruby LSP: Debug program",
        "program": "ruby "
      },
      {
        "type": "ruby_lsp",
        "request": "attach",
        "name": "Ruby LSP: Attach to a debugger"
      },
      {
        "type": "ruby_lsp",
        "request": "launch",
        "name": "Ruby LSP: Debug test file",
        "program": "ruby -Itest "
      }
    ],
    "compounds": []
  },

  "less.lint.compatibleVendorPrefixes": "warning",
  "less.lint.duplicateProperties": "warning",
  "less.lint.float": "warning",
  "less.lint.ieHack": "warning",
  "less.lint.importStatement": "warning",
  "less.lint.universalSelector": "warning",
  "less.lint.unknownVendorSpecificProperties": "warning",
  "less.lint.zeroUnits": "warning",

  "markdown.preview.fontSize": 13,
  // Need to be https or relative - no .. or ~
  "markdown.styles": [
    "https://halilim.github.io/vscode-markdown-styles/markdown_styles.css"
  ],
  "markdown.updateLinksOnFileMove.enabled": "always",
  "markdown.validate.enabled": true,

  "markdownlint.config": {
    "default": true,

    "line-length": {
      "line_length": 100
    },

    "no-duplicate-heading": {
      "siblings_only": true
    }
  },

  "phpcs.lintOnOpen": false,
  "phpcs.lintOnSave": false,

  "php.suggest.basic": false,
  "php.validate.enable": false,

  "prettier.printWidth": 100,
  "prettier.singleQuote": true,

  "python.analysis.autoFormatStrings": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.completeFunctionParens": true,
  "python.defaultInterpreterPath": "/opt/homebrew/bin/python3",

  "rainbow_csv.csv_lint_detect_trailing_spaces": true,
  "rainbow_csv.rbql_with_headers_by_default": true,

  "rdbg.saveBreakpoints": true,

  "redhat.telemetry.enabled": false,

  "rubyLsp.enabledFeatures": {
    "codeActions": true,
    "codeLens": true,
    "completion": true,
    "diagnostics": true,
    "documentHighlights": true,
    "documentLink": true,
    "documentSymbols": true,
    "foldingRanges": true,
    "formatting": true,
    "hover": true,
    "inlayHint": true,
    "onTypeFormatting": true,
    "selectionRanges": true,
    "semanticHighlighting": true
  },
  "rubyLsp.featureFlags": {
    "all": true
  },
  "rubyLsp.formatter": "auto",

  "scm.diffDecorationsGutterPattern": {
    "added": true
  },

  "scss.lint.compatibleVendorPrefixes": "warning",
  "scss.lint.duplicateProperties": "warning",
  "scss.lint.float": "warning",
  "scss.lint.ieHack": "warning",
  "scss.lint.universalSelector": "warning",
  "scss.lint.unknownVendorSpecificProperties": "warning",

  "security.workspace.trust.untrustedFiles": "open",
  "shellcheck.enable": false, // Provided by the Bash IDE extension now, duplicates warnings
  "shellcheck.enableQuickFix": true,
  "shellcheck.ignorePatterns": {
    "**/*.xonshrc": true,
    "**/*.xsh": true,
    "**/*.zlogin": true,
    "**/*.zlogout": true,
    "**/*.zprofile": false,
    "**/*.zsh-theme": true,
    "**/*.zsh": true,
    "**/*.zshenv": false,
    "**/*.zshrc": false,
    "**/zlogin": true,
    "**/zlogout": true,
    "**/zprofile": true,
    "**/zshenv": true,
    "**/zshrc": true
  },

  "shellformat.flag": "--case-indent --indent 2 --keep-padding --space-redirects",
  "shellformat.path": "/opt/homebrew/bin/shfmt",
  // "shellformat.useEditorConfig": true, // This only recognizes files ending in .sh

  "solargraph.formatting": true,

  "svg.preview.mode": "svg",

  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.tabs.enabled": true,

  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "NOTE",
    "TODO",
    "XXX",
    "[ ]",
    "[x]"
  ],
  "todo-tree.highlights.customHighlight": {
    "FIXME": {
      "foreground": "#f00"
    },
    "NOTE": {
      "foreground": "#00d4d87e"
    },
    "TODO": {
      "foreground": "#ffa500"
    }
  },
  "todo-tree.tree.scanMode": "current file",

  "typescript.updateImportsOnFileMove.enabled": "always",

  // Implemented via regular keyboard shortcuts
  // "vim.handleKeys": {
  //     "<C-o>": true
  // },
  // "vim.useCtrlKeys": true,
  "vim.camelCaseMotion.enable": true,
  "vim.easymotion": true,
  "vim.enableNeovim": true,
  // cSpell:ignore highlightedyank
  "vim.highlightedyank.enable": true,
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.leader": ",",
  "vim.neovimPath": "/opt/homebrew/bin/nvim",
  "vim.replaceWithRegister": true,
  "vim.showMarksInGutter": true,
  "vim.sneakReplacesF": true,
  "vim.sneakUseIgnorecaseAndSmartcase": true,
  "vim.useSystemClipboard": true,
  "vim.vimrc.enable": true,
  "vim.visualstar": true,

  // To improve performance
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1, // cSpell:ignore asvetliakov
    "vscodevim.vim": 1
  },

  "vim.normalModeKeyBindings": [
    {
      "before": ["leader", "leader", "k"],
      "commands": ["workbench.action.openGlobalKeybindingsFile"]
    },
    {
      "before": ["leader", "leader", "j"],
      "commands": ["workbench.action.openSettingsJson"]
    },
    {
      "before": ["leader", "leader", "j", "w"],
      "commands": ["workbench.action.openWorkspaceSettingsFile"]
    },

    { "before": ["leader", "%"], "commands": ["editor.emmet.action.matchTag"] },
    { "before": ["leader", "a"], "commands": ["alternate.alternateFile"] },
    // TODO: Copy relative to git
    // { "before": ["leader", "c", "p"], "commands": ["copyRelativeFilePath"] },
    {
      "before": ["leader", "c", "p" /*, "l"*/],
      "commands": ["copy-relative-path-and-line-numbers.both"]
    },
    // { "before": ["leader", "c", "p", "p"], "commands": ["problems.action.copy"] },
    {
      "before": ["leader", "c", "space"],
      "commands": ["editor.action.commentLine"]
    },
    {
      "before": ["leader", "d", "a"],
      "commands": ["workbench.action.closeAllEditors"]
    },
    {
      "before": ["leader", "d", "e"],
      "commands": ["workbench.action.closeOtherEditors"]
    },
    { "before": ["leader", "f"], "commands": ["workbench.action.quickOpen"] },
    { "before": ["leader", "r", "n"], "commands": ["editor.action.rename"] },
    // { "before": ["leader", "s", "r"], "commands": [{
    //     "command": "workbench.action.files.openFileFolder",
    //     "args": { "fileUri": "~/Desktop/test\\ code/test.rb" }
    // }]},
    { "before": ["leader", "t"], "commands": ["workbench.action.gotoSymbol"] },
    {
      "before": ["leader", "T"],
      "commands": ["workbench.action.showAllSymbols"]
    },

    { "before": ["[", "m"], "commands": ["gotoNextPreviousMember.nextMember"] },
    {
      "before": ["]", "m"],
      "commands": ["gotoNextPreviousMember.previousMember"]
    },

    { "before": ["C-j"], "commands": ["editor.action.marker.next"] },
    { "before": ["C-k"], "commands": ["editor.action.marker.prev"] },
    // { "before": ["C-o"], "commands": ["extension.vim_ctrl+o"] },
    { "before": ["C-r"], "commands": ["redo"] },

    // { "before": ["D-π"], "commands": [{ "command": "workbench.action.quickOpen", "args": "<C-R><C-W>" }] },

    // D-j, M-j or D-M-j do not work. Modified the regular shortcuts. D-k is due to Cmd+K being special (D=Cmd, M=Alt)
    // { "before": ["D-j"], "commands": ["editor.action.moveLinesDownAction"] },
    // { "before": ["D-k"], "commands": ["editor.action.moveLinesUpAction"] },

    // { "before": ["g", "]"], "commands": ["workbench.action.showAllSymbols"] },
    { "before": ["g", "]"], "commands": ["editor.action.peekDefinition"] },
    { "before": ["-"], "commands": ["editor.action.inPlaceReplace.down"] },
    {
      "before": ["K"],
      "commands": ["editor.action.showDefinitionPreviewHover"]
    },
    // Workaround for https://github.com/VSCodeVim/Vim/issues/1490
    { "before": ["u"], "commands": ["undo"] },
    { "before": ["z", "g"], "commands": ["cSpell.addWordToDictionary"] }
  ],

  "vim.visualModeKeyBindings": [
    {
      "before": ["leader", "c", "space"],
      "commands": ["editor.action.commentLine"]
    }
  ],

  "vscode-yaml-sort.emptyLinesUntilLevel": 1,
  "vscode-yaml-sort.useLeadingDashes": false,

  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  "window.autoDetectColorScheme": true,
  "window.newWindowDimensions": "maximized",

  // cSpell:ignore matchtext
  "editor.tokenColorCustomizations": {
    "[*Light*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#000"
          }
        }
      ]
    },
    "[*Dark*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#fff"
          }
        }
      ]
    },
    "[Quiet Light]": {
      "comments": "#777"
    },
    "[Solarized Dark]": {
      "comments": "#899Ea5"
    },
    "[Solarized Light]": {
      "comments": "#435151"
    },
    "textMateRules": []
  },

  "workbench.colorCustomizations": {
    "[Default Light+]": {
      "editorCursor.foreground": "#999"
    },
    "[Solarized Dark]": {
      "editorCursor.foreground": "#cba"
    },
    "[Solarized Light]": {
      "editorCursor.foreground": "#fcc"
    },

    // editorBracketHighlight.foreground*: Sync with .vimrc > rainbow_conf
    // [({[({[]})]})]

    "[* Dark][Spinel]": {
      "editorBracketHighlight.foreground1": "#ffd700",
      "editorBracketHighlight.foreground2": "#da70d6",
      "editorBracketHighlight.foreground3": "#87cefa",
      "editorBracketHighlight.foreground4": "#ffa500",
      "editorBracketHighlight.foreground5": "#33b0ff",
      "editorBracketHighlight.foreground6": "#af00ff"
    },

    "[* Light]": {
      "editorBracketHighlight.foreground1": "#87af87",
      "editorBracketHighlight.foreground2": "#af00d7",
      "editorBracketHighlight.foreground3": "#0000ff",
      "editorBracketHighlight.foreground4": "#ff8700",
      "editorBracketHighlight.foreground5": "#33b0ff",
      "editorBracketHighlight.foreground6": "#800080"
    }
  },

  "workbench.colorTheme": "Ayu Dark Bordered",
  "workbench.preferredDarkColorTheme": "Ayu Dark Bordered",
  "workbench.preferredLightColorTheme": "Ayu Light Bordered",

  "workbench.editor.decorations.colors": true,
  "workbench.editor.enablePreviewFromCodeNavigation": true,
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.wrapTabs": true,
  "workbench.editorAssociations": {
    "*.csv": "gc-excelviewer-csv-editor",
    "*.ipynb": "jupyter-notebook",
    "*.plist": "default"
  },
  "workbench.iconTheme": "ayu",
  "workbench.startupEditor": "none",

  "xml.codeLens.enabled": true,

  "yaml.customTags": ["!ruby/regexp"],
  "yaml.maxItemsComputed": 10000,

  "yard.spacers.afterTags": false,
  "yard.spacers.beforeDescription": false,
  "yard.tags.paramNameBeforeType": true,

  // cSpell:ignore esbenp

  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },

  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },

  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[mdx]": {
    "editor.defaultFormatter": "unifiedjs.vscode-mdx"
  },

  "[python]": {
    "editor.formatOnType": true
  },

  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp",
    "editor.formatOnType": true,
    "editor.insertSpaces": true,
    "editor.semanticHighlighting.enabled": true,
    "files.trimTrailingWhitespace": false
  },

  "[shellscript]": {
    // cSpell:ignore foxundermoon
    "editor.defaultFormatter": "foxundermoon.shell-format",
    "editor.tabSize": 2
  },

  "[snippets]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },

  "[svg]": {
    "editor.defaultFormatter": "jock.svg"
  },

  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml" // cSpell:ignore tamasfe
  },

  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },

  "[xslt]": {
    "editor.semanticHighlighting.enabled": true
  },

  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  }
}
