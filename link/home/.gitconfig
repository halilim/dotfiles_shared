; Some tools don't recognize .config/git/config, and directly use .gitconfig

[alias]
	c = commit
	cl = clone
	co = checkout

[apply]
	whitespace = nowarn

[branch]
	sort = -committerdate

[color]
	ui = always

[column]
	ui = auto

[commit]
	; Disabled due to the inconvenience of having to enter password ~per day to unlock key
	; Also: https://softwareengineering.stackexchange.com/q/212192/7611
	; Using SSH signing for now
	gpgsign = true
	verbose = true

[core]
	; Using ~/.config/git/attributes
	; attributesfile = ~/.gitattributes_global

	autocrlf = input
	editor = code --wait
	eol = lf

	; Using ~/.config/git/ignore
	; excludesfile = ~/.gitignore_global

	pager = delta

[credential]
	helper = osxkeychain

; https://dandavison.github.io/delta/configuration.html

[delta]
	; For git diff
	features = decorations
	line-numbers = true
	navigate = true  ; use n and N to move between diff sections

[delta "decorations"]
	commit-decoration-style = blue ol
	commit-style = raw
	file-style = omit
	hunk-header-decoration-style = blue box
	hunk-header-file-style = red
	hunk-header-line-number-style = "#067a00"
	hunk-header-style = file line-number syntax

[delta "interactive"]
	keep-plus-minus-markers = false

[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true

; TODO: Broken with both brew imgcat & iterm2 imgcat
; [diff "image"]
;   command = imgcat
;   textconv = imgcat

[diff "plist"]
	textconv = plutil -convert xml1 -o -

[difftool]
	prompt = false

[difftool "code"]
	cmd = code --diff \"$LOCAL\" \"$REMOTE\"

[difftool "kdiff3"]
	cmd = /Applications/kdiff3.app/Contents/MacOS/kdiff3 \"$LOCAL\" \"$REMOTE\"

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =

[difftool "yml"]
	cmd = yaml_diff \"$LOCAL\" \"$REMOTE\"

[fetch]
	all = true
	prune = true
	pruneTags = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

; cSpell:ignore Creset
[format]
	pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset

[gpg]
	format = ssh
	; program = gpg

[gui]
	encoding = utf-8

[help]
	autocorrect = prompt

[init]
	defaultBranch = main

[interactive]
	; For git add --patch
	diffFilter = delta --color-only --features=interactive

[merge]
	autoStash = true
	conflictstyle = zdiff3
	tool = gvimdiff ; Direct editing is simpler than 4 panes for conflicts

[mergetool]
	keepBackup = false

[mergetool "code"]
	cmd = code --wait --merge \"$REMOTE\" \"$LOCAL\" \"$BASE\" \"$MERGED\"

[mergetool "gvim"]
	cmd = gvim

[mergetool "kdiff3"]
	cmd = /Applications/kdiff3.app/Contents/MacOS/kdiff3 \"$BASE\" \"$LOCAL\" \"$REMOTE\" -o \"$MERGED\"

[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[pull]
	ff = only
	rebase = false

[push]
	autoSetupRemote = true
	default = simple
	followTags = true
	useForceIfIncludes = true

[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true

[rerere]
	autoupdate = true
	enabled = true

[tag]
	sort = version:refname

[url "https://"]
	insteadOf = git://

; Enable if Bitbucket SSH slows down
; [url "https://halil@bitbucket.org/"]
;   insteadOf = git@bitbucket.org:

[user]
	; Prevent commits if name/email gets unset
	useConfigOnly = true

[include]
	path = ~/.config/git/custom.gitconfig
