{
  "codeium.enableConfig": {
    "*": true,
    "applescript": true,
    "csv (semicolon)": true,
    "csv": true,
    "env": true,
    "gotmpl": true,
    "icalendar": true,
    "markdown": true,
    "nginx": true,
    "plaintext": true,
    "procfile": true,
    "snippets": true,
    "svg": true,
    "viml": true,
    "Vimscript": true,
    "xml": true
  },

  "cSpell.customDictionaries": {
    "shared_en": { "path": "~/.vim/spell/shared.en.utf-8.dic" },
    "custom_en": { "path": "~/.vim/spell/custom.en.utf-8.dic" },
    "shared_tr": { "path": "~/.vim/spell/shared.tr.utf-8.dic" },
    "custom_tr": { "path": "~/.vim/spell/custom.tr.utf-8.dic" },
    "custom": true
  },
  "cSpell.enableFiletypes": [
    "shellscript"
  ],
  "cSpell.ignoreRegExpList": [
    "/[^\\s]{40,}/"
  ],
  "cSpell.language": "en,tr",
  // VSCode-specific words, mostly from within this file
  "cSpell.userWords": [
    "apacheconf",
    "esbenp"
  ],

  "css.format.spaceAroundSelectorSeparator": true,
  "css.lint.compatibleVendorPrefixes": "warning",
  "css.lint.duplicateProperties": "warning",
  "css.lint.float": "warning",
  "css.lint.ieHack": "warning",
  "css.lint.importStatement": "warning",
  "css.lint.universalSelector": "warning",
  "css.lint.unknownVendorSpecificProperties": "warning",
  "css.lint.zeroUnits": "warning",

  "csv-edit.readOption_hasHeader": "true",

  "csv-preview.capitalizeHeaders": false,
  "csv-preview.lineNumbers": "source",
  "csv-preview.resizeColumns": "first",
  "csv-preview.separator": "[,;]",

  "diffEditor.codeLens": true,
  "diffEditor.diffAlgorithm": "advanced",
  "diffEditor.hideUnchangedRegions.enabled": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": false,

  "docker.containers.description": [
    "RepositoryNameAndTag",
    "Status"
  ],
  "docker.containers.label": "ContainerName",
  "docker.containers.sortBy": "Label",

  "editor.acceptSuggestionOnEnter": "smart",
  "editor.autoClosingQuotes": "always",
  "editor.cursorBlinking": "phase",
  "editor.find.seedSearchStringFromSelection": "selection",
  "editor.fontFamily": "'CaskaydiaCove NF', 'FiraCode Nerd Font', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 13,
  "editor.guides.bracketPairs": "active",
  "editor.inlineSuggest.enabled": true,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.showSlider": "always",
  "editor.multiCursorModifier": "ctrlCmd",

  "editor.quickSuggestions": {
    "comments": "off",
    "other": "inline",
    "strings": "off"
  },

  "editor.renderWhitespace": "none",
  "editor.rulers": [100],
  "editor.scrollBeyondLastLine": false,
  "editor.snippetSuggestions": "top",
  "editor.suggest.showStatusBar": true,
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,

  "editor.unicodeHighlight.allowedCharacters": {
    "ç": true,
    "ğ": true,
    "ı": true,
    "ö": true,
    "Ö": true,
    "Ş": true,
    "ş": true,
    "ü": true,
  },
  "editor.unicodeHighlight.includeComments": true,

  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrapColumn": 100,

  "emmet.includeLanguages": {
    "erb": "html"
  },

  "explorer.confirmDragAndDrop": false,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.ts": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "Gemfile": "Gemfile.lock",
    "package.json": "package-lock.json, yarn.lock",
    "tsconfig.json": "tsconfig.*.json"
  },

  "extensions.ignoreRecommendations": true,

  "files.associations": {
    // ".config/git/config*": "ini", - doesn't work, use .ini extension in the file name instead
    ".config/git/ignore*": "ignore",
    ".env.*": "env",
    ".env": "env",
    ".gvimrc": "viml",
    ".ideavimrc": "viml",
    ".inputrc": "shellscript",
    ".jshintignore": "ignore",
    ".markdownlintrc": "jsonc",
    "*.erb.deface": "erb",
    "*.gitconfig*": "ini",
    "*.haml.deface": "haml",
    "*.ignore": "ignore",
    "*.jbuilder": "ruby",
    "*.sublime-settings": "json",
    "*.tgn": "json",
    "*.tpl.php": "smarty",
    "*.yml.*": "yaml",
    "*.zone.txt": "zone",
    "**/.aws/credentials": "ini",
    "**/.bundle/config": "yaml",
    "**/.config/bat/config": "properties",
    "**/.mackup.cfg": "ini",
    "**/.mackup/*.cfg": "ini",
    "**/.ssh/config": "ssh_config",
    "**/chrome/exts/uBlock.txt": "json",
    "**/nginx*.conf*": "nginx",
    "**/nginx/**/*.conf*": "nginx",
    "**/php*/**/*.conf": "ini",
    "/etc/**/*.conf": "plain",
    "/etc/apache2/**/*.conf": "apacheconf",
    "/etc/defaults/**/*.conf": "shellscript",
    "/etc/periodic/**/*.conf": "shellscript",
    "Brewfile*": "ruby",
    "coc-settings.json": "jsonc",
    "Procfile.*": "procfile",
  },

  "files.exclude": {
    "*.sublime-*": true
  },

  "files.watcherExclude": {
    "*.sublime-*": true
  },

  "git.branchProtection": [
    "main",
    "master"
  ],
  "git.openRepositoryInParentFolders": "never",

  "git-graph.maxDepthOfRepoSearch": 1,

  "github.copilot.enable": {
    "*": true,
    "markdown": true,
    "plaintext": true,
    "yaml": true
  },

  "gruvboxMaterial.lightContrast": "hard",

  "html-css-class-completion.enableEmmetSupport": true,

  "html.format.extraLiners": "body",

  "indentRainbow.ignoreErrorLanguages": [
    "markdown",
    "ruby",
  ],

  "jqPlayground.binaryPath": "/opt/homebrew/bin/jq",

  "js/ts.implicitProjectConfig.checkJs": true,

  "jshint.lintHTML": true,

  "json.maxItemsComputed": 10000,

  "launch": {
    "configurations": [
      {
        "type": "rdbg",
        "name": "rdbg: Debug current file",
        "request": "launch",
        "script": "${file}",
        "args": [],
        "askParameters": true
      },
      {
        "type": "rdbg",
        "name": "rdbg: Attach",
        "request": "attach"
      },
      {
        "type": "rdbg",
        "name": "rdbg: Debug bin/rails server",
        "request": "launch",
        "script": "bin/rails server"
      },

      {
        "type": "ruby_lsp",
        "request": "launch",
        "name": "Ruby LSP: Debug program",
        "program": "ruby "
      },
      {
        "type": "ruby_lsp",
        "request": "attach",
        "name": "Ruby LSP: Attach to a debugger"
      },
      {
        "type": "ruby_lsp",
        "request": "launch",
        "name": "Ruby LSP: Debug test file",
        "program": "ruby -Itest "
      },
    ],
    "compounds": []
  },

  "less.lint.compatibleVendorPrefixes": "warning",
  "less.lint.duplicateProperties": "warning",
  "less.lint.float": "warning",
  "less.lint.ieHack": "warning",
  "less.lint.importStatement": "warning",
  "less.lint.universalSelector": "warning",
  "less.lint.unknownVendorSpecificProperties": "warning",
  "less.lint.zeroUnits": "warning",

  "markdown.preview.fontSize": 13,
  // Need to be https or relative - no .. or ~
  "markdown.styles": [
    "https://halilim.github.io/vscode-markdown-styles/markdown_styles.css"
  ],
  "markdown.updateLinksOnFileMove.enabled": "always",
  "markdown.validate.enabled": true,

  "markdownlint.config": {
    "default": true,

    "line-length": {
      "line_length": 100
    },

    "no-duplicate-header": {
      "allow_different_nesting": true,
      "siblings_only": true
    }
  },

  "phpcs.lintOnOpen": false,
  "phpcs.lintOnSave": false,

  "php.suggest.basic": false,
  "php.validate.enable": false,

  "python.defaultInterpreterPath": "/opt/homebrew/bin/python3",

  "rainbow_csv.csv_lint_detect_trailing_spaces": true,
  "rainbow_csv.rbql_with_headers_by_default": true,

  "rdbg.saveBreakpoints": true,

  "redhat.telemetry.enabled": false,

  "rubyLsp.enabledFeatures": {
    "codeActions": true,
    "codeLens": true,
    "completion": true,
    "diagnostics": true,
    "documentHighlights": true,
    "documentLink": true,
    "documentSymbols": true,
    "foldingRanges": true,
    "formatting": true,
    "hover": true,
    "inlayHint": true,
    "onTypeFormatting": true,
    "selectionRanges": true,
    "semanticHighlighting": true,
  },
  "rubyLsp.enableExperimentalFeatures": true,

  "scm.diffDecorationsGutterPattern": {
    "added": true
  },

  "scss.lint.compatibleVendorPrefixes": "warning",
  "scss.lint.duplicateProperties": "warning",
  "scss.lint.float": "warning",
  "scss.lint.ieHack": "warning",
  "scss.lint.universalSelector": "warning",
  "scss.lint.unknownVendorSpecificProperties": "warning",

  "security.workspace.trust.untrustedFiles": "open",

  "shellcheck.enable": false,
  "shellcheck.enableQuickFix": true,
  "shellcheck.ignorePatterns": {
    "**/*.xonshrc": true,
    "**/*.xsh": true,
    "**/*.zlogin": true,
    "**/*.zlogout": true,
    "**/*.zprofile": false,
    "**/*.zsh-theme": true,
    "**/*.zsh": true,
    "**/*.zshenv": false,
    "**/*.zshrc": false,
    "**/zlogin": true,
    "**/zlogout": true,
    "**/zprofile": true,
    "**/zshenv": true,
    "**/zshrc": true
  },

  "shellformat.flag": "--case-indent --indent 2 --keep-padding --space-redirects",
  "shellformat.path": "/opt/homebrew/bin/shfmt",
  // "shellformat.useEditorConfig": true, // This only recognizes files ending in .sh

  "solargraph.formatting": true,

  "svg.preview.mode": "svg",

  "tabnine.experimentalAutoImports": true,

  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.tabs.enabled": true,

  "todo-tree.filtering.excludeGlobs": [
    "**/*.md"
  ],
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]"
  ],
  "todo-tree.highlights.customHighlight": {
    "FIXME": {
      "foreground": "#f00",
    },
    "TODO": {
      "foreground": "#ffa500",
    },
  },
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
  "todo-tree.tree.scanMode": "current file",

  // Implemented via regular keyboard shortcuts
  // "vim.handleKeys": {
  //     "<C-o>": true
  // },
  // "vim.useCtrlKeys": true,
  "vim.camelCaseMotion.enable": true,
  "vim.enableNeovim": true,
  "vim.hlsearch": true,
  "vim.leader": ",",
  "vim.neovimPath": "/opt/homebrew/bin/nvim",
  "vim.replaceWithRegister": true,
  "vim.showMarksInGutter": true,
  "vim.useSystemClipboard": true,
  "vim.vimrc.enable": true,
  "vim.visualstar": true,

  "vim.normalModeKeyBindings": [
    { "before": ["leader", ",", "k"], "commands": ["workbench.action.openGlobalKeybindingsFile"] },
    { "before": ["leader", ",", "v"], "commands": ["workbench.action.openSettingsJson"] },

    { "before": ["leader", "%"], "commands": ["editor.emmet.action.matchTag"] },
    { "before": ["leader", "a"], "commands": ["alternate.alternateFile"] },
    // TODO: Copy relative to git
    // { "before": ["leader", "c", "p"], "commands": ["copyRelativeFilePath"] },
    { "before": ["leader", "c", "p"/*, "l"*/], "commands": ["copy-relative-path-and-line-numbers.both"] },
    // { "before": ["leader", "c", "p", "p"], "commands": ["problems.action.copy"] },
    { "before": ["leader", "c", "space"], "commands": ["editor.action.commentLine"] },
    { "before": ["leader", "d", "a"], "commands": ["workbench.action.closeAllEditors"] },
    { "before": ["leader", "d", "e"], "commands": ["workbench.action.closeOtherEditors"] },
    { "before": ["leader", "f"], "commands": ["workbench.action.quickOpen"] },
    { "before": ["leader", "r", "n"], "commands": ["editor.action.rename"] },
    // { "before": ["leader", "s", "r"], "commands": [{
    //     "command": "workbench.action.files.openFileFolder",
    //     "args": { "fileUri": "~/Desktop/test\\ code/test.rb" }
    // }]},
    { "before": ["leader", "t"], "commands": ["workbench.action.gotoSymbol"] },
    { "before": ["leader", "T"], "commands": ["workbench.action.showAllSymbols"] },

    { "before": ["[", "m"], "commands": ["gotoNextPreviousMember.nextMember"] },
    { "before": ["]", "m"], "commands": ["gotoNextPreviousMember.previousMember"] },

    { "before": ["C-j"], "commands": ["editor.action.marker.next"] },
    { "before": ["C-k"], "commands": ["editor.action.marker.prev"] },
    // { "before": ["C-o"], "commands": ["extension.vim_ctrl+o"] },
    { "before": ["C-r"], "commands": ["redo"] },

    // { "before": ["D-π"], "commands": [{ "command": "workbench.action.quickOpen", "args": "<C-R><C-W>" }] },

    // D-j, M-j or D-M-j do not work. Modified the regular shortcuts. D-k is due to Cmd+K being special (D=Cmd, M=Alt)
    // { "before": ["D-j"], "commands": ["editor.action.moveLinesDownAction"] },
    // { "before": ["D-k"], "commands": ["editor.action.moveLinesUpAction"] },

    // { "before": ["g", "]"], "commands": ["workbench.action.showAllSymbols"] },
    { "before": ["g", "]"], "commands": ["editor.action.peekDefinition"] },
    { "before": ["K"], "commands": ["editor.action.showDefinitionPreviewHover"] },
    // Workaround for https://github.com/VSCodeVim/Vim/issues/1490
    { "before": ["u"], "commands": ["undo"] },
    { "before": ["z", "g"], "commands": ["cSpell.addWordToDictionary"] },
  ],

  "vim.visualModeKeyBindings": [
    { "before": ["leader", "c", "space"], "commands": ["editor.action.commentLine"] },
  ],

  "vscode-yaml-sort.emptyLinesUntilLevel": 1,
  "vscode-yaml-sort.useLeadingDashes": false,

  // cSpell:disable-next-line
  "vsicons.dontShowNewVersionMessage": true,

  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  "window.autoDetectColorScheme": true,

  "editor.tokenColorCustomizations": {
    "[Quiet Light]": {
      "comments": "#777", // Orig: "#aaa"
    },
    "[Solarized Dark]": {
      "comments": "#899Ea5"
    },
    "[Solarized Light]": {
      "comments": "#435151", // Orig: "#93A1A1"
    }
  },

  "workbench.colorCustomizations": {
    "[Default Light+]": {
      "editorCursor.foreground": "#999"
    },
    "[Solarized Dark]": {
      "editorCursor.foreground": "#cba",
    },
    "[Solarized Light]": {
      "editorCursor.foreground": "#fcc"
    },

    // editorBracketHighlight.foreground*: Sync with .vimrc > rainbow_conf
    // [({[({[]})]})]

    "[* Dark][Spinel]": {
      "editorBracketHighlight.foreground1": "#ffd700",
      "editorBracketHighlight.foreground2": "#da70d6",
      "editorBracketHighlight.foreground3": "#87cefa",
      "editorBracketHighlight.foreground4": "#ffa500",
      "editorBracketHighlight.foreground5": "#33b0ff",
      "editorBracketHighlight.foreground6": "#af00ff",
    },

    "[* Light]": {
      "editorBracketHighlight.foreground1": "#87af87",
      "editorBracketHighlight.foreground2": "#af00d7",
      "editorBracketHighlight.foreground3": "#0000ff",
      "editorBracketHighlight.foreground4": "#ff8700",
      "editorBracketHighlight.foreground5": "#33b0ff",
      "editorBracketHighlight.foreground6": "#800080",
    }
  },

  "workbench.colorTheme": "Spinel",
  "workbench.preferredDarkColorTheme": "Spinel",
  "workbench.preferredLightColorTheme": "Quiet Light",

  "workbench.editor.decorations.colors": true,
  "workbench.editor.enablePreviewFromCodeNavigation": true,
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.wrapTabs": true,
  "workbench.editorAssociations": {
    "*.csv": "gc-excelviewer-csv-editor",
    "*.ipynb": "jupyter-notebook",
    "*.plist": "default"
  },
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",

  "xml.codeLens.enabled": true,

  "yaml.maxItemsComputed": 10000,

  "yard.spacers.afterTags": false,
  "yard.spacers.beforeDescription": false,
  "yard.tags.paramNameBeforeType": true,

  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },

  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },

  "[python]": {
    "editor.formatOnType": true
  },

  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp",
    "editor.formatOnType": true,
    "editor.insertSpaces": true,
    "editor.semanticHighlighting.enabled": true,
    "files.trimTrailingWhitespace": false,
  },

  "[shellscript]": {
    "editor.tabSize": 2
  },

  "[snippets]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[svg]": {
    "editor.defaultFormatter": "jock.svg"
  },

  "[xslt]": {
    "editor.semanticHighlighting.enabled": true
  },

  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
}