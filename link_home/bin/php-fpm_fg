#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'

# In order to respond to Ctrl+C:
# https://blog.forma-pro.com/dockerize-any-php-project-a-pure-bash-script-38dd37baf710

# User configs: "$HOMEBREW_PREFIX"/etc/php

trap 'kill -15 $PHP_FPM_PID;' SIGTERM SIGINT

php-fpm -F 2>&1 &
PHP_FPM_PID=$!
wait $PHP_FPM_PID
